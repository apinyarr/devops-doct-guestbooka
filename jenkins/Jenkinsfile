def Environment = "SIT"
def Branch = "develop"

pipeline {
    agent {
        label "master"
    }

    options {
        // skipDefaultCheckout()
        timeout(time: 5, unit: 'MINUTES')
        timestamps()
    }

    stages {
        stage('test') {
            steps {
                echo "hello world!"
            }
        }

        stage('Preparation') {
            steps {
                echo "********************* Stage: Preparation *********************"
                echo "--------------------- Stpe: Reading Environment ---------------------"
                Environment = params.Environment
                echo "Environment: ${Environment}"
                echo "--------------------- Stpe: Reading Branch ---------------------"
                if(params.Branch != '') {
                    Branch = params.Branch
                   
                }
                echo "Branch/Tag: ${Branch}"
            }
        }
    }
}